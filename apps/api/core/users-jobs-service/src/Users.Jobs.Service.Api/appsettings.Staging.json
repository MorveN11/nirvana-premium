{
  "ConnectionStrings": {
    "DefaultConnection": "Host=chamba_users_jobs_db;Port=4040;Database=chamba_users_jobs_db;Username=root;Password=root;Include Error Detail=true"
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://chamba_seq:5341" }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },

  "Keycloak": {
    "AuthorizationUrl": "http://localhost:18080/realms/nirvana-realm/protocol/openid-connect/auth"
  },

  "Jwt": {
    "Audience": "account",
    "Issuer": "http://localhost:18080/realms/nirvana-realm",
    "MetadataAddress": "http://keycloak:8080/realms/nirvana-realm/.well-known/openid-configuration"
  }
}
