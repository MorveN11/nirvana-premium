{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=4040;Database=chamba_users_jobs_db;Username=root;Password=root;Include Error Detail=true"
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },

  "Keycloak": {
    "AuthorizationUrl": "http://localhost:18080/realms/nirvana-realm/protocol/openid-connect/auth"
  },

  "Jwt": {
    "Audience": "account",
    "Issuer": "http://localhost:18080/realms/nirvana-realm",
    "MetadataAddress": "http://localhost:18080/realms/nirvana-realm/.well-known/openid-configuration"
  },

  "ServiceConfig": {
    "Id": "UsersJobsService.Api-9300",
    "Name": "UsersJobsService",
    "ApiHost": "localhost",
    "Port": 9300,
    "ConsulUrl": "http://localhost:8500"
  }
}
