{
  "ConnectionStrings": {
    "DefaultConnection": "Host=chamba_db;Port=4040;Database=chamba_db;Username=user;Password=password;Include Error Detail=true"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://seq:5341" }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "FilePaths": {
    "Firebase": "firebase.json",
    "Env": ".env"
  }
}
